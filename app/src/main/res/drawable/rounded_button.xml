<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон кнопки -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> <!-- Цвет фона кнопки -->
            <corners android:radius="10dp"/> <!-- Радиус скругления углов -->
        </shape>
    </item>
    <!-- Обводка -->
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Прозрачный фон -->
            <stroke
                android:width="2dp"/> <!-- Ширина обводки -->
            android:color="@android:color/holo_blue_dark"/> <!-- Цвет обводки -->
            <corners android:radius="10dp"/> <!-- Радиус скругления углов -->
        </shape>
    </item>
</layer-list>